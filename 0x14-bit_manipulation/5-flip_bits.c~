#include "main.h"

/**
 * flip_bits - Checks for the number of bits used to
 * changed from one number to another.
 * @n: The first number
 * @m: The second number
 * Return: The number of bits to change.
 */

unsigned int flip_bits(unsigned long int n, unsigned long int m)
{

int x, count = 0;
unsigned long int old;
unsigned long int new = n ^ m;

for (x = 63; x >= 0; x--)
{

old = new >> i;
if (old & 1)
count++;
}
return (count);

}
